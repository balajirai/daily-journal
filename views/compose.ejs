<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle" class="form-label">Title</label>
        <input class="form-control" type="text" name="postTitle" id="postTitle" autocomplete="off" required>
    </div>

    <div class="form-group">
        <label for="postBody" class="form-label">Post</label>
        <textarea class="form-control" id="postBody" name="postBody" rows="5" cols="30" required></textarea>
    </div>

    <button class="btn btn-primary btn_custom" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer") -%>